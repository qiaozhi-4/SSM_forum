<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zking.mapper.IUserMapper">

    <select id="findByUserIdSelectAttention" parameterType="com.forum.entity.Music">
        select * from `user`
        where id=(select he_user_id from attention
                  where my_user_id=${id})
    </select>

    <select id="findByUserIdSelectFans" parameterType="com.forum.entity.Music">
        select * from `user`
        where id=(select my_user_id from attention
                  where he_user_id=#{id})
    </select>

</mapper>